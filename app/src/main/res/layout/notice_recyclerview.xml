<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/shadow_notice"
    android:tag="abc"
    android:id="@+id/layout_notice_recycle"
    android:padding="10dp"
    android:elevation="10dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/notice_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Vinod Yadav"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/notice_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20/01/2021"
                android:layout_weight="1"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/notice_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="07:22 AM"
                android:textSize="10sp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/notice_notice"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/data_of_sir"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_margin="2dp"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"/>



</androidx.appcompat.widget.LinearLayoutCompat>