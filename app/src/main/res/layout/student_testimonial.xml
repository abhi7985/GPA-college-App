<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:id="@+id/cons_layout_testimonial">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_slider_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/student_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/csback" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/student_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/data_of_sir"
        android:textColor="#FFFF"
        app:layout_constraintTop_toBottomOf="@+id/card_slider_image"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Gudhplay Jaiswal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/student_message"
        app:layout_constraintTop_toBottomOf="@+id/student_message" />

    <TextView
        android:id="@+id/student_qualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ranked"
        android:textColor="#E1D3A8"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/student_name"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/student_name"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />


</androidx.constraintlayout.widget.ConstraintLayout>