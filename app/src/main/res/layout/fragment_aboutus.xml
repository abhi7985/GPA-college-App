<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutusFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/principal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:background="@drawable/editimage_background"
                android:padding="10dp"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Principal"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_slider_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8">

                    <ImageView
                        android:id="@+id/hod_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/satyaprakashsri" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/hod_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Satya Prakash Srivastava"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_slider_image"
                    app:layout_constraintVertical_bias="0.313" />

                <TextView
                    android:id="@+id/hod_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="( sps_srivastava@rediffmail.com )"
                    android:textSize="18sp"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="@id/hod_name"
                    app:layout_constraintStart_toStartOf="@id/hod_name"
                    app:layout_constraintTop_toBottomOf="@id/hod_name" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="#FFFF"
                android:elevation="20dp"
                >
                <Button
                    android:id="@+id/csbtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/branch_button_color"
                    android:text="Computer Science and Eng."
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20sp"
                android:background="#FFFF"
                android:elevation="20dp">
                <Button
                    android:id="@+id/itbtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/branch_button_color"
                    android:text="Information Technology"
                    android:elevation="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20sp"
                android:background="#FFFF"
                android:elevation="20dp"
                >
                <Button
                    android:id="@+id/elxbtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/branch_button_color"
                    android:text="Electronic Eng."
                    android:elevation="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20sp"
                android:background="#FFFF"
                android:elevation="20dp"
                >
                <Button
                    android:id="@+id/applied_btn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/branch_button_color"
                    android:text="Applied Faculty"
                    android:elevation="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20sp"
                android:background="#FFFF"
                android:elevation="20dp"
                >
                <Button
                    android:id="@+id/nonteaching_btn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/branch_button_color"
                    android:text="Non Teaching Staff"
                    android:elevation="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>