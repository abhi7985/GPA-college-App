<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/message_shape"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:elevation="10dp">

    <TextView
        android:id="@+id/message_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="left"
        android:text="Name"
        android:background="@drawable/message_shape"
        android:textColor="@color/colornewAcc"
        android:textSize="11dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="230dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:autoLink="all"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:text="Name is the real\nwow it is"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:layout_marginLeft="5dp"
            android:text="Name"
            android:textSize="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_image_download"
        android:minWidth="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_message"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/pdf_message"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/pdf_icon"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/image_download_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/download_icon"
            android:layout_gravity="right|bottom"
            android:layout_margin="5dp"/>


    </LinearLayout>
</LinearLayout>